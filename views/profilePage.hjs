<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <meta name="description",contents="">
    <meta name="author", contents="Sagar, Paul">
    <meta name="viewport", content="width=device-width,initial-scale=1">
    <link rel='stylesheet' href='../public/css/style.css' />
    <link rel='stylesheet' href='../bower_components/materialize/bin/materialize.css' />
    <link rel='stylesheet' href='../public/css/ProfilePage.css' />
  </head>
  <body>
    <div id = 'content'></div>

    <!--This is the modal overlay for profile edit-->

     <div id="modal1" class="modal modal-fixed-footer">
      <div class="modal-content">
        <h4> {{name}} </h4>
          <form id="modalForm">
            <input id="modalImg" type="text" placeholder="Profile Picture"/>
            <input id="modalColor" type="text" placeholder="Profile Color" /><br />
            <input id="modalPost" type="text" placeholder="Post" />
            <input id="modalTitle" type="text" placeholder="Video Title" />
            <div class="file-field input-field">
              <input class="file-path validate" type="text"/>
              <div class="btn">
                <span>File</span>
                <input type="file" />
              </div>
            </div>
          </form>
      </div>
      <div class="modal-footer">
        <a href="#!" onClick="completeForm()" class="modal-action waves-effect waves-green btn-flat ">Agree</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat ">Cancel</a>
      </div>
    </div>


    <!--Scripts-->
    <script>
      var info = ["{{name}}","{{userName}}","{{numberOfFollowers}}","{{numberOfPosts}}","{{profilePic}}","{{profileColour}}", "{{isCurrentUser}}", "{{currentUserName}}"];
    </script>
    <script src="../bower_components/jquery/dist/jquery.min.js" charset="utf-8"></script>
    <script src="../bower_components/react/JSXTransformer.js"></script>
    <script src="../bower_components/react/react.js"></script>
    <script src="../bower_components/materialize/bin/materialize.js"></script>
    <script type="text/jsx;harmony=true" src="../public/js/profilePage.js"></script>
  </body>
</html>
