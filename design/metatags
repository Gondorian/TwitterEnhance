<!--Below are the openGraph metatags for facebook integration -->
<meta property="og:title" content="Video 45 webpage" />
<meta property="og:site_name" content="Video45" />
<meta property="og:url" content="http://localhost:3000" /> <!--should link to the article not the person doing the action -->
<meta property="og:description" content="Video45 is a website that allows the social sharing of 45 second videos"/>
<meta property="fb:app_id" content="[FB_APP_ID]" />
<meta property="og:type" content="article" />
<meta property="og:locale" content="en_US" /> <!-- Default language -->
<meta property="article:author" content="https:www.facebook.com/fareedzakaria" />
<meta property="article:publisher" content="https://www.facebook.com/cnn" />

<!-- for facebook images -->
<meta property="ogimage:width" content="some_number" />
<meta property="og:image:height" content="some_number" />

<!--facebook content metatags-->
<meta property="contentURL" content="the sharing link" />
<meta property="contentTitle" content="The title of the content link"/>
<meta property="imageURL" content="the thumnail image that appears in the post, poster image" />
<meta property="contentDescription" content="the text from the user for the post">